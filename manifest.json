{
  "manifest_version": 2,
  "name": "ReadMode.me",
  "description": "",
  "version": "1.1.5",
  "browser_action": {
    "default_title": "ReadMode.me"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/styles.css"]
    }
  ],
  "permissions": [
    "activeTab", "storage"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "web_accessible_resources": [
    "images/*.svg",
    "css/iframe.css",
    "js/mercury.web.js",
    "js/tracking.js"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}